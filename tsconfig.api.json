
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./api"
  },
  "include": [
    "api/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "components",
    "pages",
    "store",
    "utils",
    "styles",
    "hooks",
  ]
}